{
  "version": "1.0.0",
  "description": "GitHub events to workflow mapping configuration",
  "event_mappings": [
    {
      "event_type": "check_suite",
      "actions": ["requested", "rerequested"],
      "repository_patterns": [
        {
          "owner": "folio-org",
          "repository": "app-*",
          "branches": "*",
          "workflows": [
            {
              "owner": "{owner}",
              "repository": "{repository}",
              "workflow_file": "pr-check.yml",
              "ref": "master",
              "inputs": {
                "pr_number": "{pr_number}",
                "head_sha": "{head_sha}"
              }
            }
          ]
        }
      ]
    },
    {
      "event_type": "pull_request",
      "actions": ["opened", "reopened"],
      "repository_patterns": [
        {
          "owner": "folio-org",
          "repository": "app-*",
          "branches": "*",
          "workflows": [
            {
              "owner": "{owner}",
              "repository": "{repository}",
              "workflow_file": "pr-check.yml",
              "ref": "master",
              "inputs": {
                "pr_number": "{pr_number}",
                "head_sha": "{head_sha}"
              }
            }
          ]
        }
      ]
    }
  ]
}