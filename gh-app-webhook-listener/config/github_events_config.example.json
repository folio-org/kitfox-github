{
  "version": "1.0.0",
  "description": "GitHub events to workflow mapping configuration",
  "event_mappings": [
    {
      "event_type": "check_suite",
      "actions": ["requested", "rerequested"],
      "repository_patterns": [
        {
          "owner": "folio-org",
          "repository": "app-*",
          "branches": "*",
          "workflows": [
            {
              "owner": "{owner}",
              "repository": "{repository}",
              "workflow_file": "pr-check.yml",
              "ref": "master",
              "inputs": {
                "repo_owner": "{owner}",
                "repo_name": "{repository}",
                "pr_number": "{pr_number}",
                "head_sha": "{head_sha}"
              }
            }
          ]
        }
      ]
    },
    {
      "event_type": "check_run",
      "actions": ["requested_action"],
      "repository_patterns": [
        {
          "owner": "folio-org",
          "repository": "app-*",
          "branches": "*",
          "workflows": [
            {
              "owner": "{owner}",
              "repository": "{repository}",
              "workflow_file": "pr-check.yml",
              "ref": "master",
              "inputs": {
                "repo_owner": "{owner}",
                "repo_name": "{repository}",
                "pr_number": "{pr_number}",
                "head_sha": "{head_sha}"
              }
            }
          ]
        }
      ]
    },
    {
      "event_type": "pull_request",
      "actions": ["opened", "reopened"],
      "repository_patterns": [
        {
          "owner": "folio-org",
          "repository": "app-*",
          "branches": "*",
          "workflows": [
            {
              "owner": "{owner}",
              "repository": "{repository}",
              "workflow_file": "pr-check.yml",
              "ref": "master",
              "inputs": {
                "repo_owner": "{owner}",
                "repo_name": "{repository}",
                "pr_number": "{pr_number}",
                "head_sha": "{head_sha}"
              }
            }
          ]
        }
      ]
    },
    {
      "event_type": "pull_request",
      "actions": ["closed"],
      "repository_patterns": [
        {
          "owner": "folio-org",
          "repository": "app-*",
          "branches": "*",
          "workflows": [
            {
              "owner": "{owner}",
              "repository": "{repository}",
              "workflow_file": "pr-merge.yml",
              "ref": "master",
              "inputs": {
                "repo_owner": "{owner}",
                "repo_name": "{repository}",
                "pr_number": "{pr_number}",
                "head_sha": "{head_sha}",
                "base_branch": "{base_branch}",
                "merged": "{merged}"
              }
            }
          ]
        }
      ]
    }
  ]
}