{
  "workflows": [
    {
      "name": "eureka-ci-checks",
      "file": ".github/workflows/eureka-ci-check.yml",
      "description": "Main CI checks for Eureka projects",
      "enabled": true,
      "triggers": ["pull_request", "check_suite"],
      "branch_patterns": {
        "base": ["main", "master", "develop", "release/*"],
        "head": ["feature/*", "bugfix/*", "hotfix/*"]
      },
      "inputs": {
        "run_tests": "true",
        "run_lint": "true",
        "run_security_scan": "true"
      }
    },
    {
      "name": "build-and-test",
      "file": ".github/workflows/build.yml",
      "description": "Build and test workflow",
      "enabled": true,
      "triggers": ["pull_request"],
      "file_patterns": [
        "src/**/*.java",
        "src/**/*.js",
        "src/**/*.ts",
        "pom.xml",
        "package.json"
      ],
      "inputs": {
        "build_type": "full",
        "test_coverage": "true"
      }
    },
    {
      "name": "security-scan",
      "file": ".github/workflows/security.yml",
      "description": "Security vulnerability scanning",
      "enabled": true,
      "triggers": ["pull_request"],
      "branch_patterns": {
        "base": ["main", "master", "develop"]
      },
      "required_labels": ["security"],
      "inputs": {
        "scan_dependencies": "true",
        "scan_code": "true",
        "scan_containers": "false"
      }
    },
    {
      "name": "performance-tests",
      "file": ".github/workflows/performance.yml",
      "description": "Performance testing workflow",
      "enabled": false,
      "triggers": ["pull_request"],
      "required_labels": ["performance", "benchmark"],
      "inputs": {
        "test_duration": "300",
        "concurrent_users": "100"
      }
    }
  ],
  "global_settings": {
    "timeout_minutes": 30,
    "max_parallel_workflows": 5,
    "retry_failed_workflows": true,
    "retry_count": 2
  }
}